{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "files.eol": "\n",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "prettier.endOfLine": "lf",
  "prettier.configPath": "BackOps.Platform.Web//.prettierrc",
  "prettier.ignorePath": "BackOps.Platform.Web//.prettierignore",
  "workbench.colorCustomizations": {
    "activityBar.background": "#9a3412",  // orange-800
    "titleBar.activeBackground": "#c2410c",  // orange-700
    "titleBar.activeForeground": "#ffedd5"  // orange-100
  },
  "tailwindCSS.experimental.classRegex": ["class:\\s*?[\"'`]([^\"'`]*).*?,"]
}
